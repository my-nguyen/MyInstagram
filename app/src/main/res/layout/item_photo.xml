<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/photo_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/photo_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/photo_profile_picture"
            android:layout_alignTop="@id/photo_profile_picture"
            android:layout_alignBottom="@id/photo_profile_picture"
            android:gravity="center"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/photo_created_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/photo_profile_picture"
            android:layout_alignBottom="@id/photo_profile_picture"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_banner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:minHeight="50dp"/>
    <VideoView
        android:id="@+id/photo_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/photo_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_image"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"/>
    <TextView
        android:id="@+id/photo_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/photo_likes"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/photo_view_all_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray"
        android:layout_below="@id/photo_caption"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/photo_next_to_last_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/photo_view_all_comments"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/photo_last_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/photo_next_to_last_comment"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>